          <li>
            <a href="/dashboard" class="no-underline block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white"><%=req.t("navbar.dropdown.dashboard", {ns: 'util'})%></a>
          </li>
          <li>
            <%if (req.user) {
              %>
              <form method="post" action="/auth/logout">
