        %>
        <%if(req.user.avatar) {%>
        <img class="w-10 h-10 rounded-full" src="<%=`${process.env.cdnurl}/avatars/${req.user.id}/${req.user.avatar}`%>" alt="" />
        <%} else {%>
        <div class="flex w-10 h-10 rounded-full bg-slate-600 hover:bg-blue-600 transition-all items-center justify-center text-white text-4xl drop-shadow-lg text-center">
